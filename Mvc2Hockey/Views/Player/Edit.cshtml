@model Mvc2Hockey.ViewModels.PlayerViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<h2>Player</h2>


<form method="post">
    <input asp-for="DbNumber" type="hidden" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JerseyNumber" class="control-label"></label>
        <input asp-for="JerseyNumber" class="form-control" />
        <span asp-validation-for="JerseyNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    @*<div class="form-group">
            <label asp-for="PersonNummer" class="control-label"></label>
            <input asp-for="PersonNummer" class="form-control" />
            <span asp-validation-for="PersonNummer" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="FirstNhlGame" class="control-label"></label>
            <input asp-for="FirstNhlGame" class="form-control" />
            <span asp-validation-for="FirstNhlGame" class="text-danger"></span>
        </div>*@

    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        <select asp-for="TeamId" asp-items="Model.AllTeams" class="form-control">
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionEnumValue" class="control-label"></label>
        <select asp-for="PositionEnumValue" asp-items="Model.AllPositions" class="form-control">
        </select>
        <span asp-validation-for="PositionEnumValue" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}