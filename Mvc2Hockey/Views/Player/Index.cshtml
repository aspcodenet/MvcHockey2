@model System.Collections.Generic.List<Mvc2Hockey.ViewModels.PlayerListViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Players</h2>
<a asp-controller="Player" asp-action="New">Create new</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Namn</th>
            <th scope="col">Transfer</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                <a asp-controller="Player" asp-action="Edit" asp-route-id="@p.Id">
                    @p.Name
                </a>
            </td>
            <td>
                <a asp-controller="Player" asp-action="Transfer" asp-route-id="@p.Id">
                    Transfer to new team
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
