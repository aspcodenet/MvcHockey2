@model System.Collections.Generic.List<Mvc2Hockey.ViewModels.PlayerListViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Players</h2>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Namn</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                <a asp-controller="Player" asp-action="View" asp-route-id="@p.Id">
                    @p.Name
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
